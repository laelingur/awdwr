<h1>Your Pragmatic BookStore</h1>

<% @products.each do |product| %>

	<div class="entry">
		<%= image_tag(product.image_url)%>
		<h3> <%= product.title %></h3>
		<%= product.description.html_safe %>
		<div class='price-line'>
			<span class='price'><%= product.price %></span>
		</div>
	</div>
<% end %>
